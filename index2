  <!-- Scripts -->
  <script>
    const sections = ['landing', 'main', 'flower', 'song', 'memory', 'spotify', 'dice'];

    function showPage(id) {
      sections.forEach(sec => {
        document.getElementById(sec).style.display = (sec === id) ? 'flex' : 'none';
      });
      if (id === 'spotify') fetchNowPlaying();
    }

    window.addEventListener('hashchange', () => {
      const target = location.hash.substring(1) || 'landing';
      showPage(target);
    });

    if (!location.hash) location.hash = '#landing';
    window.dispatchEvent(new HashChangeEvent('hashchange'));

    function checkMemory() {
      const input = document.getElementById('memoryInput').value;
      const output = document.getElementById('memoryOutput');

      if (input === '0501') {
        output.innerHTML = 'Misheel my goat ğŸ';
      } else if (input === '0425') {
        output.innerHTML = "Hope IrmuunTuya will always be in special part of your heart.<br>Most importantly, never forget...<br><strong>I\'M BATMAN.</strong> ğŸ¦‡<br>I\'m always there when you light up my logo.";
      } else {
        output.textContent = 'Nothing unlocked... yet.';
      }
    }

    function rollDice() {
      const messages = [
        "You rolled a 1... Azgul bnda ğŸ˜…",
        "You rolled a 2... Ee arail chdsngu!",
        "You rolled a 3... Dahiad gants?",
        "You rolled a 4... Baragl!",
        "You rolled a 5... hicheegeeree!",
        "You rolled a 6... jackpot batmani gariin useg!! ğŸ‰"
      ];
      const result = messages[Math.floor(Math.random() * messages.length)];
      document.getElementById('diceResult').textContent = result;
    }

    // Spotify Fetch
    const accessToken = '1POdFZRZbvb...qqillRxMr2z'; // Replace this

    async function fetchNowPlaying() {
      const response = await fetch('https://api.spotify.com/v1/me/player/currently-playing', {
        headers: { Authorization: 'Bearer ' + accessToken }
      });

      const nowPlayingElement = document.getElementById('nowPlaying');

      if (response.status === 204 || response.status === 202) {
        nowPlayingElement.textContent = "You're not playing anything right now.";
        return;
      }

      const data = await response.json();
      const song = data.item?.name;
      const artist = data.item?.artists[0]?.name;

      if (song && artist) {
        nowPlayingElement.textContent = `ğŸµ Now Playing: ${song} by ${artist}`;
      } else {
        nowPlayingElement.textContent = "You're not playing anything right now.";
      }
    }

    setInterval(fetchNowPlaying, 30000);
  </script>

